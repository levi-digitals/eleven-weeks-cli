{
	"name": "eleven-weeks-cli",
	"version": "0.1.1",
	"license": "MIT",
	"bin": {
		"eleven-weeks-cli": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"dev": "tsc --watch --project tsconfig.json",
		"lint": "xo",
		"format": "prettier --write .",
		"pretest": "npm run build",
		"test": "ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.1.0",
		"meow": "^11.0.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/react": "^18.2.0",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.0",
		"xo": "^0.53.1"
	},
	"ava": {
		"environmentVariables": {
			"NODE_NO_WARNINGS": "1"
		},
		"extensions": [
			"ts"
		],
		"nodeArguments": [
			"--loader=ts-node/esm"
		],
		"files": [
			"test/**/*.test.ts"
		]
	},
	"xo": {
		"extensions": [
			"ts","tsx"
		],
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
