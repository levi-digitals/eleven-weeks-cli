{
  "compilerOptions": {
    "target": "ES2021",
  "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "types": ["node", "react"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "src/cli.ts"]
}
